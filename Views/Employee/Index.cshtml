@model IEnumerable<EmployeeManagementSystem.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Employee Directory</h2>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Add Employee
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No employees found. Click "Add Employee" to get started.
        </div>
    }
    else
    {
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Role</th>
                    <th>Email</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>@emp.Name</td>
                        <td>@emp.Department</td>
                        <td>@emp.Role</td>
                        <td>@emp.Email</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-warning btn-sm me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@emp.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

